
@model IEnumerable<AdminDash.Models.DepartmentVM>

@{
    ViewBag.Title = "Departments";
}

<h2 class="mb-2 text-muted">Departments</h2>

<div class="card shadow">
    <div class="card-body">
        <div class="col ml-auto">
            <a class="btn btn-outline-primary float-right ml-3" asp-controller="Department" asp-action="Create">Add more <span class="fe fe-plus fe-12 mr-2"></span></a>
        </div>
        <table class="table table-hover table-striped sort datatables" id="dataTable-1">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Department Name</th>
                    <th>Department Code</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.DepartmentName</td>
                        <td>@item.DepartmentCode</td>
                        <td><a asp-controller="Department" asp-action="Edit" class="btn mb-2 btn-outline-secondary" asp-route-id="@item.Id"><span class="fe fe-edit fe-16 mr-2"></span>Edit</a></td>
                        <td><a asp-controller="Department" asp-action="Delete" class="btn mb-2 btn-outline-danger" asp-route-id="@item.Id"><span class="fe fe-trash-2 fe-16 mr-2"></span>Delete</a></td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>


@section scripts {
    <script src='~/js/jquery.dataTables.min.js'></script>
    <script src='~/js/dataTables.bootstrap4.min.js'></script>
    <script>
        $('#dataTable-1').DataTable(
            {
                autoWidth: true,
                "lengthMenu": [
                    [5, 10, 25, -1],
                    [5, 10, 25, "All"]
                ]
            });</script>
}

