@using AdminDash.Resource.Layout
@using Microsoft.AspNetCore.Identity;
@inject IStringLocalizer<SharedResource> LSharedLocalizer
@inject SignInManager<IdentityUser> signInManager
@{
    var Culture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;
}
<!DOCTYPE html>

<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="~/icon.ico">

    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Overpass:ital,wght@0,100;0,200;0,300;0,400;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    @if (Culture == "en-US")
    {
        <link href="~/css/simplebar.css" rel="stylesheet">
        <link rel="stylesheet" href="~/css/feather.css">
        <link rel="stylesheet" href="~/css/select2.css">
        <link rel="stylesheet" href="~/css/dropzone.css">
        <link rel="stylesheet" href="~/css/jquery.steps.css">
        <link rel="stylesheet" href="~/css/dataTables.bootstrap4.css">
        <link rel="stylesheet" href="~/css/daterangepicker.css">
        <link rel="stylesheet" href="~/css/app-light.css" id="lightTheme" disabled>
        <link rel="stylesheet" href="~/css/app-dark.css" id="darkTheme">
    }
    @if (Culture == "ar-EG")
    {
        <link href="https://fonts.googleapis.com/css2?family=Overpass:ital,wght@0,100;0,200;0,300;0,400;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
        <link href="~/rtl/css/simplebar.css" rel="stylesheet">
        <link rel="stylesheet" href="~/css/feather.css">
        <link rel="stylesheet" href="~/rtl/css/select2.css">
        <link rel="stylesheet" href="~/rtl/css/dropzone.css">
        <link rel="stylesheet" href="~/rtl/css/jquery.steps.css">
        <link rel="stylesheet" href="~/rtl/css/dataTables.bootstrap4.css">
        <link rel="stylesheet" href="~/rtl/css/daterangepicker.css">
        <link rel="stylesheet" href="~/rtl/css/app-light.css" id="lightTheme" disabled>
        <link rel="stylesheet" href="~/rtl/css/app-dark.css" id="darkTheme">
        <link href="~/rtl/css/app-rtl.css" rel="stylesheet" />
    }

</head>

<body class="vertical  dark rtl">

    @*container*@
    <div class="wrapper">

        <nav class="topnav navbar navbar-light">
            <button type="button" class="navbar-toggler text-muted mt-2 p-0 mr-3 collapseSidebar">
                <i class="fe fe-menu navbar-toggler-icon"></i>
            </button>

            <form class="mr-auto searchform text-muted" asp-controller="Employee" asp-action="Index">
                <input class="form-control mr-sm-2 bg-transparent border-0 pl-4 text-muted" type="search" placeholder="@LSharedLocalizer["EmployeeName"]" aria-label="Search" name="Name">
            </form>
            @if (Culture == "ar-EG")
            {<a class="nav-link text-muted my-2"
                href="@Url.Action("SetLanguage", "Home", new {
                                                  culture = "en-US",
                                                  returnUrl = Context.Request.Path + Context.Request.QueryString
                                              })"><i class="fe fe-globe  fe-16"></i></a>
            }
            @if (Culture == "en-US")
            {
                <a class="nav-link text-muted my-2"
                   href="@Url.Action("SetLanguage", "Home", new {
                                                  culture = "ar-EG",
                                                  returnUrl = Context.Request.Path + Context.Request.QueryString
                                              })"><i class="fe fe-globe  fe-16"></i></a>
            }

            @if (signInManager.IsSignedIn(User))
            {
                <div class=" text-muted my-2">
                    @User.Identity.Name
                </div>
            }
            <ul class="nav">
                <li class="nav-item">
                    <a class="nav-link text-muted my-2" href="#" id="modeSwitcher" data-mode="dark">
                        <i class="fe fe-sun fe-16"></i>
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-muted pr-0" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="avatar avatar-sm mt-2">
                            <img src="~/assets/avatars/face-1.jpeg" alt="..." class="avatar-img rounded-circle">
                        </span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                        <form asp-controller="Account" asp-action="LogOff">
                            <input type="submit" class="dropdown-item" value="Sign Out" />
                        </form>

                    </div>
                </li>
            </ul>
        </nav>

        <aside class="sidebar-left border-right bg-white shadow" id="leftSidebar" data-simplebar>
            <a href="#" class="btn collapseSidebar toggle-btn d-lg-none text-muted ml-2 mt-3" data-toggle="toggle">
                <i class="fe fe-x"><span class="sr-only"></span></i>
            </a>
            <nav class="vertnav navbar navbar-light">
                <!-- nav bar -->
                <div class="w-100 mb-4 d-flex">
                    <a class="navbar-brand mx-auto mt-2 flex-fill text-center" asp-controller="Home" asp-action="Index">
                        <svg version="1.1" id="logo" class="navbar-brand-img brand-sm" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 120 120" xml:space="preserve">
                        <g>
                        <polygon class="st0" points="78,105 15,105 24,87 87,87 	" />
                        <polygon class="st0" points="96,69 33,69 42,51 105,51 	" />
                        <polygon class="st0" points="78,33 15,33 24,15 87,15 	" />
                        </g>
              </svg>
                    </a>
                </div>
                
                <ul class="navbar-nav flex-fill w-100 mb-2">
                    <li class="nav-item ">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">
                            <i class="fe fe-home fe-16"></i>
                            <span class="ml-3 item-text">@LSharedLocalizer["Home"]</span><span class="sr-only">(current)</span>
                        </a>

                    </li>
                </ul>


                <ul class="navbar-nav flex-fill w-100 mb-2">
                    <li class="nav-item ">
                        <a asp-controller="Department" asp-action="Index" class="nav-link">
                            <i class="fe fe-grid fe-16"></i>
                            <span class="ml-3 item-text">@LSharedLocalizer["Department"]</span><span class="sr-only">(current)</span>
                        </a>

                    </li>
                </ul>

                <ul class="navbar-nav flex-fill w-100 mb-2">
                    <li class="nav-item ">
                        <a asp-controller="Employee" asp-action="Index" class="nav-link">
                            <i class="fe fe-users fe-16"></i>
                            <span class="ml-3 item-text">@LSharedLocalizer["Employee"]</span><span class="sr-only">(current)</span>
                        </a>

                    </li>
                </ul>



                <ul class="navbar-nav flex-fill w-100 mb-2">
                    <li class="nav-item ">
                        <a asp-controller="Home" asp-action="Mail" class="nav-link">
                            <i class="fe fe-mail fe-16"></i>
                            <span class="ml-3 item-text">@LSharedLocalizer["SendMail"]</span><span class="sr-only">(current)</span>
                        </a>

                    </li>
                </ul>

            </nav>
        </aside>

        <main role="main" class="main-content">
            <div class="container-fluid">
                @RenderBody()
            </div>

        </main>

    </div>

    @if (Culture == "en-US")
    {
        <script src="~/js/jquery.min.js"></script>
        <script src="~/js/popper.min.js"></script>
        <script src="~/js/moment.min.js"></script>
        <script src="~/js/bootstrap.min.js"></script>
        <script src="~/js/simplebar.min.js"></script>
        <script src='~/js/jquery.stickOnScroll.js'></script>
        <script src="~/js/tinycolor-min.js"></script>
        <script src="~/js/config.js"></script>
        <script src="~/js/d3.min.js"></script>
        <script src="~/js/topojson.min.js"></script>
        <script src="~/js/apps.js"></script>
    }

    @if (Culture == "ar-EG")
    {
        <script src="~/rtl/js/jquery.min.js"></script>
        <script src="~/rtl/js/popper.min.js"></script>
        <script src="~/rtl/js/moment.min.js"></script>
        <script src="~/rtl/js/bootstrap.min.js"></script>
        <script src="~/rtl/js/simplebar.min.js"></script>
        <script src='~/rtl/js/jquery.stickOnScroll.js'></script>
        <script src="~/rtl/js/tinycolor-min.js"></script>
        <script src="~/rtl/js/config.js"></script>
        <script src="~/rtl/js/d3.min.js"></script>
        <script src="~/rtl/js/topojson.min.js"></script>
        <script src="~/rtl/js/apps.js"></script>
    }
    @RenderSection("scripts", false)

</body>
</html>
